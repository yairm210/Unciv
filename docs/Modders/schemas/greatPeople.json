{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the Great Person (Alan Turing, Isaac Newton, etc)"
      },
      "units": {
        "type": "array",
        "description": "A list of the Great Person units this name applies to (Great Engineer, Great Scientist, etc)",
        "items": { "type": "string" }
      },
      "uniques": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/uniques.json" },
      "civilopediaText": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/civilopediaText.json" }
    },
    "required": [
      "name", "units"
    ],
    "additionalProperties": false
  }
}
