{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
      "type": "object",
      "properties": {
          "name": { "type": "string" },
          "text": { "type": "string" },
          "choices": {
              "type": "array",
              "items": {
                  "properties": {
                      "text": { "type": "string" },
                      "triggeredUniques": {
                          "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/uniques.json",
                          "minItems": 1
                      },
                      "conditions": {
                          "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/uniques.json"
                      }
                  },
                  "required": ["text", "triggeredUniques"],
                  "additionalProperties": false
              }
          }
      },
      "required": [
          "name"
      ],
      "additionalProperties": false
  }
}
