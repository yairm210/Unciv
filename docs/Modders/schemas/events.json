{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "array",
  "items": {
      "type": "object",
      "properties": {
          "name": { "type": "string", "description": "Used for triggering via 'Triggers a [event] event' unique" },
          "text": { "type": "string", "description": "Flavor text displayed to user" },
          "presentation": { "enum": ["None", "Alert", "Floating"], "description": "Alert indicates a regular popup, None means the choice is made randomly, Floating is for tutorial-style indicators" },
          "uniques": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/uniques.json" },
          "civilopediaText": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/civilopediaText.json" },
          
          "choices": {
              "type": "array",
              "items": {
                  "properties": {
                      "text": { "type": "string" },
                      "uniques": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/uniques.json" },
                      "civilopediaText": { "$ref": "https://raw.githubusercontent.com/yairm210/Unciv/master/docs/Modders/schemas/civilopediaText.json" },
                      "keyShortcut": { "type": "string" }
                  },
                  "required": ["text", "uniques"],
                  "additionalProperties": false
              }
          }
      },
      "required": [
          "name"
      ],
      "additionalProperties": false
  }
}
